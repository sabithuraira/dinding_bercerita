# Docker Environment Variables
# Copy this file to .env and update with your secure values

# Application
APP_NAME=Mading
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://your-domain.com

# Database Configuration (for Laravel)
DB_CONNECTION=mysql
DB_HOST=mysql_mading
DB_PORT=3306
DB_DATABASE=mading_db
DB_USERNAME=mading_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_ROOT_PASSWORD

# PHPMyAdmin Configuration
PHPMYADMIN_USER=admin
PHPMYADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
PHPMYADMIN_URL=http://your-domain.com:8080

# Port Configuration
APP_PORT=8000
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080

# User/Group IDs (optional, for file permissions)
UID=1000
GID=1000
